@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h2>Pretraga TV Programa</h2>

<form method="post">
    <div class="form-group">
        <label for="datumSelect">Datum</label>
        <select id="datumSelect" name="selectedDate" class="form-control" asp-for="SelektovanDatum" asp-items="Model.Datumi" onchange="this.form.submit()">
            <option value="">Izaberite datum</option>
        </select>
    </div>
    <div class="form-group">
        <label for="tipEmisijeSelect">Tip emisije</label>
        <select id="tipEmisijeSelect" name="selectedShow" class="form-control" asp-for="SelektovanTipEmisije" asp-items="Model.Emisije">
            <option value="">Izaberite emisiju</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Pronadji</button>
</form>

@if (Model.FiltriraneEmisije != null && Model.FiltriraneEmisije.Count > 0)
{
    <h3>Rezultati</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Vreme</th>
                <th>Naziv</th>
                <th>Tip</th>
                <th>Slika</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emisija in Model.FiltriraneEmisije)
            {
                <tr>
                    <td>@emisija.Vreme</td>
                    <td>@emisija.Naziv</td>
                    <td>@emisija.Tip</td>
                    <td><img src="@emisija.Slika" alt="Slika emisije" style="width:50px;height:50px;" /></td>
                </tr>
            }
        </tbody>
    </table>
}
